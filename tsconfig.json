{
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"]
    },
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "types": [
      "node",
      "vite/client",
      "vite-plugin-svgr/client",
      "@remix-run/dev",
      "@remix-run/node",
      "./vite.d.ts"
    ],
    "outDir": "./dist/out-tsc"
  },
  "include": [
    "app",
    "app/.server/*.ts",
    "app/.server/*.tsx",
    "app/.client/*.tsx"
  ],
  "exclude": ["node_modules"]
}
